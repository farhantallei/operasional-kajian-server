// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id    Int              @id @default(autoincrement())
  name  String           @unique
  books AuthorsOnBooks[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  books Book[]
}

model Book {
  category Category @relation(fields: [categoryId], references: [id])

  id             Int              @id @default(autoincrement())
  title          String
  authors        AuthorsOnBooks[]
  categoryId     Int
  records        Record[]
  upcomingRecord UpcomingRecord[]
}

model AuthorsOnBooks {
  book   Book   @relation(fields: [bookId], references: [id])
  author Author @relation(fields: [authorId], references: [id])

  bookId   Int
  authorId Int

  @@id([bookId, authorId])
}

model Place {
  id             Int              @id @default(autoincrement())
  name           String
  address        String           @unique
  latitude       Decimal
  longitude      Decimal
  records        Record[]
  upcomingRecord UpcomingRecord[]

  @@unique([latitude, longitude])
}

model Crew {
  id                 Int                        @id @default(autoincrement())
  username           String                     @unique
  name               String
  email              String?
  phoneNumber        String?
  storageDevices     StorageDevice[]
  records            CrewsOnRecords[]
  upcomingRecords    CrewsOnUpcomingRecords[]
  recordsLastPIC     LastPICsOnRecords[]
  recordActionAudits PICsOnRecordActionAudits[]
}

model Device {
  id             Int             @id @default(autoincrement())
  type           String
  storageDevices StorageDevice[]
}

model StorageDevice {
  device Device @relation(fields: [deviceId], references: [id])
  owner  Crew   @relation(fields: [ownerId], references: [id])

  id                Int                 @id @default(autoincrement())
  brand             String
  deviceId          Int
  storage           Int
  ownerId           Int
  records           Record[]
  RecordActionAudit RecordActionAudit[]
}

enum RecordAction {
  record
  move
  edit
  submit
}

enum RecordStatus {
  raw
  final
  lost
  corrupt
}

model Record {
  location StorageDevice @relation(fields: [locationId], references: [id])
  book     Book          @relation(fields: [bookId], references: [id])
  place    Place         @relation(fields: [placeId], references: [id])

  id                 Int                 @id @default(autoincrement())
  title              String
  sequence           Int
  lastAction         RecordAction
  locationId         Int
  status             RecordStatus
  bookId             Int
  placeId            Int
  recordedAt         DateTime
  updatedAt          DateTime            @default(now())
  crews              CrewsOnRecords[]
  recordActionAudits RecordActionAudit[]
  lastPICs           LastPICsOnRecords[]

  @@unique([sequence, bookId])
}

model LastPICsOnRecords {
  record Record @relation(fields: [recordId], references: [id])
  crew   Crew   @relation(fields: [crewId], references: [id])

  recordId Int
  crewId   Int

  @@id([recordId, crewId])
}

model UpcomingRecord {
  book  Book  @relation(fields: [bookId], references: [id])
  place Place @relation(fields: [placeId], references: [id])

  id        Int                      @id @default(autoincrement())
  title     String
  sequence  Int
  bookId    Int
  placeId   Int
  startedOn DateTime
  crews     CrewsOnUpcomingRecords[]
}

model CrewsOnUpcomingRecords {
  upcomingRecord UpcomingRecord @relation(fields: [upcomingRecordId], references: [id])
  crew           Crew           @relation(fields: [crewId], references: [id])

  upcomingRecordId Int
  crewId           Int
  substitute       Boolean

  @@id([upcomingRecordId, crewId])
}

enum CrewRole {
  recording
  streaming
  editing
}

enum SalaryStatus {
  paid
  unpaid
}

model CrewsOnRecords {
  record Record @relation(fields: [recordId], references: [id])
  crew   Crew   @relation(fields: [crewId], references: [id])

  recordId     Int
  crewId       Int
  role         CrewRole
  salaryStatus SalaryStatus

  @@id([recordId, crewId])
}

model RecordActionAudit {
  record   Record        @relation(fields: [recordId], references: [id])
  location StorageDevice @relation(fields: [locationId], references: [id])

  id          Int                        @id @default(autoincrement())
  recordId    Int
  action      RecordAction
  status      RecordStatus
  locationId  Int
  performedOn DateTime
  PICs        PICsOnRecordActionAudits[]

  @@index([recordId])
}

model PICsOnRecordActionAudits {
  recordActionAudit   RecordActionAudit @relation(fields: [recordActionAuditId], references: [id])
  recordActionAuditId Int
  crew                Crew              @relation(fields: [crewId], references: [id])
  crewId              Int

  @@id([recordActionAuditId, crewId])
}
